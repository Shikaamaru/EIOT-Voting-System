/* Background */
.video-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  background: #131623;
  z-index: -2;
}

.video-bg::before{
    --i : 4;
    content: '';
    position: absolute;
    width: 990px;
    height: 990px;
    border-radius: 50%;
    background: linear-gradient(rgb(0,47,255),#f0f);
    transform: translate(-90%,-40%);
    z-index: -1;
    animation: animate2 10s linear infinite;
    animation-delay: calc(-1s * var(--i));
}

.video-bg::after{
    position: relative;
    --i : 1;
    content: '';
    /* position: absolute; */
    width: 990px;
    height: 990px;
    border-radius: 50%;
    background: linear-gradient(#f0f,rgb(0,47,255));
    transform: translate(100%,40%);
    z-index: -1;
    animation: animate1 10s linear infinite;
    animation-delay: calc(-1s * var(--i));
}

@keyframes animate1 {
    0%,100%{
        transform: translate(110%,45%);
    }
    50%{
        transform: translate(90%,35%);
    }
}

@keyframes animate2 {
    0%,100%{
        transform: translate(-80%,-30%);
    }
    50%{
        transform: translate(-100%,-50%);
    }
}

