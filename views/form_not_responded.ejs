/* Background */
.video-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  background: #131623;
  z-index: -2;
}

.video-bg::before{
    --i : 4;
    content: '';
    position: absolute;
    width: 990px;
    height: 990px;
    border-radius: 50%;
    background: linear-gradient(rgb(0,47,255),#f0f);
    transform: translate(-90%,-40%);
    z-index: -1;
    animation: animate2 10s linear infinite;
    animation-delay: calc(-1s * var(--i));
}

.video-bg::after{
    position: relative;
    --i : 1;
    content: '';
    /* position: absolute; */
    width: 990px;
    height: 990px;
    border-radius: 50%;
    background: linear-gradient(#f0f,rgb(0,47,255));
    transform: translate(100%,40%);
    z-index: -1;
    animation: animate1 10s linear infinite;
    animation-delay: calc(-1s * var(--i));
}

@keyframes animate1 {
    0%,100%{
        transform: translate(110%,45%);
    }
    50%{
        transform: translate(90%,35%);
    }
}

@keyframes animate2 {
    0%,100%{
        transform: translate(-80%,-30%);
    }
    50%{
        transform: translate(-100%,-50%);
    }
}



/* Nav */
*{
    padding: 0;
    margin: 0;
    text-decoration: none;
    list-style-type: none;
    box-sizing: border-box;
}

body{
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

nav{
    /* background: #0082e6; */
    text-transform: uppercase;
    background: transparent;
    height: 80px;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(4.5px);
    box-shadow: 20px 20px 40px -6px rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

label.logo{
    color: white;
    font-size: 35px;
    line-height: 80px;
    padding: 0 100px;
    font-weight: bold;
}

nav ul{
    float: right;
    margin-right: 20px;
}

nav ul li{
    display: inline-block;
    /* line-height: 80px; */
    margin: 0 5px;
}

nav ul li a{
    color: white;
    /* font-size: 17px; */
    text-transform: uppercase;
    padding: 7px 13px;
    border-radius: 3px;
}

nav ul li a.active, a:hover{
    display: inline-block;
    /* padding: 10px 15px; */
    border: 0;
    text-decoration: none;
    border-radius: 15px;
    background-color: rgba(255,255,255,0.1);
    border: 1px solid rgba(255,255,255,0.1);
    backdrop-filter: blur(30px);
    color: rgba(255,255,255,0.8);
    font-size: 14px;
    letter-spacing: 2px;
    cursor: pointer;
    text-transform: uppercase;
}


.checkbtn{
    font-size: 30px;
    color: white;
    float: right;
    line-height: 80px;
    margin-right: 40px;
    cursor: pointer;
    display: none;
}

#check{
    display: none;
}

@media(max-width: 952px){
    label.logo{
        font-size: 30px;
        padding-left: 50px;
    }
    nav ul li a{
        font-size: 16px;
    }
}
@media(max-width: 858px){
    body{
        position: fixed;
        height: 100vh;
        width: 100vw;
    }
    .checkbtn{
        display: block;
        padding: 10px;
    }
    ul{
        position: fixed;
        width: 100%;
        height: 100vh;
        background: #2c3e50;
        top: 80px;
        left: -100%;
        text-align: center;
        transition: all 0.5s ;
    }
    nav ul li{
        display: block;
        margin: 50px 0;
        line-height: 30px;

    }

    nav ul li a{
        font-size: 20px;
    }
    nav a:hover, a.active{
        background: none;
        color: #0082e6;
    }

    #check:checked ~ ul{
        left: 0;
    }
}

